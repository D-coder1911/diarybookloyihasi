<%- include('layout') %>

<div class="container mt-5">
  <h1 class="text-center">Yangi Maqola Yaratish</h1>
  <form action="/articles" method="POST" class="mt-4">
    <div class="form-group">
      <label for="title">Sarlavha</label>
      <input
        type="text"
        id="title"
        name="title"
        class="form-control"
        placeholder="Maqola sarlavhasini kiriting"
        required
      />
    </div>
    <div class="form-group">
      <label for="content">Mazmun</label>
      <textarea
        id="content"
        name="content"
        rows="6"
        class="form-control"
        placeholder="Maqola matnini kiriting"
        required
      ></textarea>
    </div>
    <div class="form-group">
      <label for="tags">Teglar</label>
      <input
        type="text"
        id="tags"
        name="tags"
        class="form-control"
        placeholder="Teglarni vergul bilan ajrating"
      />
    </div>
    <button type="submit" class="btn btn-primary btn-block">Yaratish</button>
  </form>
</div>
