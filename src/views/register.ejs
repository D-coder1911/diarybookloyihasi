<%- include('layout') %>

<div class="container mt-5">
  <h1 class="text-center">Ro'yxatdan o'tish</h1>
  <form action="/auth/register" method="POST" class="mt-4">
    <div class="form-group">
      <label for="name">Ism</label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control"
        placeholder="Ismingizni kiriting"
        required
      />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        placeholder="Emailni kiriting"
        required
      />
    </div>
    <div class="form-group">
      <label for="password">Parol</label>
      <input
        type="password"
        id="password"
        name="password"
        class="form-control"
        placeholder="Parolni kiriting"
        required
      />
    </div>
    <button type="submit" class="btn btn-success btn-block">Ro'yxatdan o'tish</button>
  </form>
</div>
<div class="text-center mt-4">
  <p>Allaqachon hisobingiz bormi? <a href="/login">Kirish</a></p>
</div>
<div class="text-center mt-4">
  <p>Bizning platformamizda maqola yozing, baholang va fikr almashing!</p>
  <a href="/" class="btn btn-primary btn-lg">Bosh sahifaga qaytish</a>
</div>